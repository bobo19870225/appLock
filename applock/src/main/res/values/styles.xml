     <style name="AnimationPreview">  
       <item name="android:windowEnterAnimation">@anim/popurv_fade_in</item>  
       <item name="android:windowExitAnimation">@anim/popurv_fade_out</item>  
   </style>  

     
      <style name="PopupAnimation_alpha" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">
            @anim/popup_enter_alpha</item>
        <item name="android:windowExitAnimation">
