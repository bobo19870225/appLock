<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/durian_head_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_main" >

    <LinearLayout
        android:id="@+id/ly_navigat_left"
        android:layout_width="51dp"
        android:layout_height="51dp"
         android:visibility="gone"
        android:gravity="center" >

        <ImageView
            android:id="@+id/iv_navigat_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
              android:visibility="gone"
            android:padding="5dp"
            android:src="@drawable/abc_ic_ab_back_mtrl_am_alpha" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="51dp"
        android:gravity="right|center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_navigat_title"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dip"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:text="@string/app_name"
            
            android:textColor="@color/white"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="51dip"
            android:layout_height="51dip"
               android:visibility="gone"
               android:id="@+id/ly_navigat_rgt_lft"
            android:gravity="center" >

            <ImageView
                android:id="@+id/iv_navigat_rgt_lft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_launcher" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="51dip"
            android:layout_height="51dip"
              android:id="@+id/ly_navigat_rgt_rgt"
             android:visibility="gone"
            android:gravity="center" >
            <ImageView
                android:id="@+id/iv_navigat_rgt_rgt"
                
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/abc_ic_menu_moreoverflow_mtrl_alpha" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>